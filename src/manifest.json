{
	"manifest_version": 3,
	"name": "XrmWebTools",
	"short_name": "XrmWebTools",
	"version": "2.0.0.1",
	"description": "Only for *.dynamics.com/*",
	"content_security_policy": {
		"script-src": "self",
		"object-src": "self"
	},
	"action": {
		"default_title": "XrmWebTools",
		"default_icon": "/img/XWT48.png",
		"default_popup": "popup/popup.html"

	},
	"icons": {
		"32": "img/audit32.png",
		"48": "img/XWT48.png",
		"64": "img/audit64.png",
		"128": "img/audit128.png"
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": [
				"*://*.dynamics.com/*"
			],
			"js": [
				"engine/init.js",
				"rightbodylinks/init.js"
			]
		}
	],
	"permissions": [
		"scripting",
		"activeTab"
	],
	"host_permissions": [
		"*://*.dynamics.com/*"
	],
	"web_accessible_resources": [
		{
			"matches": [ "*://*.dynamics.com/*" ],
			"resources": [ "*" ]
		}
	]
}
